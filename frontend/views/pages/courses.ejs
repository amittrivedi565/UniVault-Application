<main>
  <a href="/" class="back-link">Back To Home</a>

  <section>
    <h2>Choose Your Resources</h2>
    <quote class="">
      Explore semester-wise subjects for various branches / fields. From
      first year fundamentals to final year.
    </quote>
  </section>
  
  <h2 class="gradient-line"></h2>

  <section id="semesters-section">

    <% data.forEach(element => { %>
    <h3>1. <%= element.name %></h3>
    <% }) %>

    <div class="accordion-container">
      <% data.forEach(branch => { %> <% branch.semesters.forEach(semester => {
      %>
      <!-- Loop through subjects for each semester -->
      <div class="accordion-item">
        <div class="accordion-header">
          <span># <%= semester.name %></span>
          <!-- Semester Name -->
        </div>
        <div class="accordion-content" id="content">
          <ul>
            <% semester.subjects.forEach(subject => { %>
            <li>
              <a href="#"><%= subject.name %></a>
              <!-- Subject Name -->
            </li>
            <% }) %>
          </ul>
        </div>
      </div>
      <% }) %> <% }) %>
    </div>
  </section>

  <section>
    <h2>Need Help?</h2>
    <p>
      Can't find your specific course or semester? <a href="#">Contact us</a>.
      We're always expanding our vault of academic resources.
    </p>
  </section>
</main>
